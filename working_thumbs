<script type="text/javascript">
  function closeCta(event) {
            console.log("Remove event received");
            var ctaId = window.frameElement.id.split('_')[1];
            var playerId = window.frameElement.src.split('/');
            playerId = playerId[playerId.length - 3];
            var playerData = {
            uuid: playerId,
            event: 'closeCta',
            id: ctaId,
            forceClose: true
            };
            window.parent.postMessage(JSON.stringify(playerData), '*');
            }
            $('#bootstrapForm').submit(function (event) {
            event.preventDefault()
            var extraData = {}
            $('#bootstrapForm').ajaxSubmit({
            data: extraData,
            dataType: 'jsonp',
            error: function () {
            closeCta();
            }
                                                                                        })
                                                                                    })
</script>
<script type="text/javascript">
  $(function(){
                                                                                        var videoName = vyContext.player.chapters_attributes[0].video_attributes.name;
                                                                                        var uuid = vyContext.player.uuid;
                                                                                        $('#1239649774').val(videoName);
                                                                                        $('#1178446259').val(uuid);
                                                                                        $('#help-yes').on('click', function(){
                                                                                          if ($(this).is(':checked')) {
                                                                                            $('#bootstrapForm > div > div:nth-child(2)').hide();
                                                                                          }
                                                                                        })
                                                                                        $('#help-no').on('click', function(){
                                                                                          if ($(this).is(':checked')) {
                                                                                            $('#bootstrapForm > div > div:nth-child(2)').fadeIn("slow");
                                                                                          }
                                                                                        });
                                                                                      });
</script>
